<launch>

	<!-- Apply Xacro to create urdf  -->
	<param name="robot_description"
	command="$(find xacro)/xacro --inorder '$(find puma560_description)/urdf/puma560_v2.xacro'" />

	<!-- send fake joint values -->
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
	<param name="use_gui" value="TRUE"/>
<!-- 	  <rosparam>
	    zeros:
	      world_to_base: 0.6109
	      base_to_link_1: -0.7156
	      link_1_to_link_2: 1.0996
	  </rosparam> -->
	</node>

	<!-- Combine joint values -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

	<!-- Show in Rviz   -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find puma560_description)/launch/puma560_rviz.rviz"/>

</launch>
