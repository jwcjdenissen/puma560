<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find puma560_control)/config/puma560_control.yaml" 
    command="load"/>

  <!-- Load the controllers -->
  <node 
    name="controller_spawner" pkg="controller_manager" type="spawner" 
    respawn="false" output="screen" ns="/puma560" args="joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node 
    name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>
 
</launch>
